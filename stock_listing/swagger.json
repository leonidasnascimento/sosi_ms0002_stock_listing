  "schemes": [
    "http"
  ],
  "paths": {
    "/": {
      "post": {
        "tags": [
          "stock-listing"
        ],
        "summary": "Add a new company to the list of brazilian stock market companies controlled by SoSI",
        "description": "",
        "operationId": "addCompany",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Company listed on Brazil's stock market",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Stock"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Sucess",
            "schema": {
              "$ref": "#/definitions/Operation"
            }
          },
          "420": {
            "description": "Method failure due to processing error. Redo operation."
          }
        }
      },
      "get": {
        "tags": [
          "stock-listing"
        ],
        "summary": "Find a company listed on SoSI's stock list",
        "description": "",
        "operationId": "getCompanyByStockCode",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "code",
            "in": "query",
            "description": "Stock code to look for into the database",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "$ref": "#/definitions/Stock"
            }
          },
          "420": {
            "description": "Method failure due to processing error. Redo operation."
          }
        }
      },
      "delete": {
        "tags": [
          "stock-listing"
        ],
        "summary": "Delete a company from the stock list",
        "description": "",
        "operationId": "deleteCompanyByStockCode",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "code",
            "in": "query",
            "description": "Stcok code to delete",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Operation"
              }
            }
          },
          "420": {
            "description": "Method failure due to processing error. Redo operation."
          }
        },
        "deprecated": false
      }
    }
  },
  "definitions": {
    "Stock": {
      "type": "object",
      "required": [
        "code",
        "company",
        "date_time_operation"
      ],
      "properties": {
        "code": {
          "type": "string",
          "format": "string",
          "description": "Company's stock code"
        },
        "company": {
          "type": "string",
          "format": "string",
          "description": "Company's name"
        },
        "detail": {
          "type": "string",
          "format": "stirng",
          "description": "Important details on the company"
        },
        "date_time_operation": {
          "type": "string",
          "format": "date-time",
          "description": "Operation date time. Ex.: '2019-09-02T13:10:14.844081+00:00'"
        }
      }
    },
    "Operation": {
      "type": "object",
      "properties": {
        "_writeTime": {
          "type": "object",
          "properties": {
            "_seconds": {
              "type": "integer",
              "format": "int64"
            },
            "_nanoseconds": {
              "type": "integer",
              "format": "int64"
            }
          }
        }
      }
    }
  }
